<?xml version="1.0"?>

<project name="Thinking in Java (simplifying)" default="simplifying.run" basedir=".">

  <description>
  build.xml for simplifying of "Thinking in Java, 3rd Edition"
  by Bruce Eckel
  Available at http://www.MindView.net
  See copyright notice in CopyRight.txt

  Ant must be downloaded from:
  http://jakarta.apache.org/ant

  Options:
  ant
    compiles and runs all examples (if necessary)
  ant test
    compiles and runs all examples
  ant simplifying.build
    compiles but does not run examples
  ant clean
    removes old class files
  </description>
  
  <target name="JDK.version.check" unless="JDK.version.ok">
    <javac
      includes="CheckVersion.java"
      srcdir="${basedir}/../com/bruceeckel/tools/"
      classpath="${basedir}/.."
    />
    <java
      taskname="CheckVersion"
      classname="com.bruceeckel.tools.CheckVersion"
      classpath="${basedir}/.."
      fork="true"
      failonerror="true"
    />
    <property name="JDK.version.ok" value="true"/>
  </target>
  
  <!-- build all dependencies and check to see if tests are up to date -->
  <target name="simplifying.prepare">
    <condition property="test.run" value="true">
      <or>
        <uptodate>
          <srcfiles dir= "${basedir}" includes="**/*Output.txt"/>
          <mapper type="glob" from="*Output.txt" to="*.class"/>
        </uptodate>
        <available file="failed"/>
      </or>
    </condition>
  </target>

  <!-- build all classes in this directory -->
  <target name="simplifying.build" depends="JDK.version.check,simplifying.prepare"
    description="Compile all source files">
    <javac
      srcdir="${basedir}"
      classpath="${basedir}/.."
      source="1.4"
    />
  </target>
  
  <!-- force all tests to be run -->
  <target name="test" description="Compile and test all examples">
    <property name="test.run" value="true"/>
    <antcall target="simplifying.run"/>
  </target>

  <!-- run all untested examples in this directory -->
  <target name="simplifying.run" depends="simplifying.build" if="test.run"
    description="Compile and run untested examples">
    <touch file="failed"/>
    <antcall target="MessengerDemo.run"/>
    <antcall target="CollectingParameterDemo.run"/>
    <delete file="failed"/>
  </target>
  
  <target name="MessengerDemo.run">
    <java
      taskname="MessengerDemo"
      classname="simplifying.MessengerDemo"
      classpath="${basedir}/.."
      fork="true" 
      failonerror="true"
    />
  </target>

  <target name="CollectingParameterDemo.run">
    <java
      taskname="CollectingParameterDemo"
      classname="simplifying.CollectingParameterDemo"
      classpath="${basedir}/.."
      fork="true" 
      failonerror="true"
    />
  </target>

  <!-- delete all class files, javadocs, and other byproducts -->
  <target name="clean" description="Removes all old class files">
    <delete>
      <fileset dir="${basedir}" includes="**/*.class"/>
      <fileset dir="${basedir}" includes="**/*Output.txt"/>
      <fileset dir="${basedir}" includes="**/log.txt"/>
      <fileset dir="${basedir}" includes="failed"/>
    </delete>
    <echo message="clean successful"/>
  </target>

  <target name="jcsc">
    <taskdef name="jcsc" classname="rj.tools.jcsc.ant.JCSCTask"/>
    <jcsc rules="${basedir}/../tij.jcsc"
      startpackage="simplifying"
      destdir="${basedir}/../jcsc"
      worstcount="20">
      <fileset dir="${basedir}" includes="**/*.java"/>
    </jcsc>
  </target>
  
</project>
